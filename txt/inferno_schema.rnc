start = inferno
inferno = element inferno { heading, toc, body }
heading = element heading { title, sub_title, author, translator, pubinfo }
title = element title { text }
sub_title = element sub_title { text }
author = element author { text }
translator = element translator { text }
pubinfo = element pubinfo { text }
toc = element toc { item+ }
item = element item { text }
body = element body { mixed {(circle* | canto+ | lb+ | sb+)+ }}
circle =
    element circle {
        number,
        main_sin,
        mixed { (pouch_ring | pain_phrase | torture_phrase | lb | sb | canto)* }
    }
canto = element canto { numeral }
lb = element lb { empty }
sb = element sb { empty }
number = attribute number { text }
main_sin = attribute main_sin { text }
numeral = attribute numeral { text }
pouch_ring =
    element pouch_ring {
        number, sub_sin,
        mixed { (pain_phrase | torture_phrase | lb | sb | canto)* }
    }
pain_phrase =
    element pain_phrase {
        mixed { (lb | sb | pain_word)* }
    }
torture_phrase =
    element torture_phrase {
        type,
        category,
        inflicted,
        inflictor,
        mixed { (lb | sb | torture_word)* }
    }
sub_sin = attribute sub_sin { text }
pain_word = element pain_word { synset?, inflicted, text }
torture_word = element torture_word { synset?, inflicted, text }
synset = attribute synset { text }
inflicted = attribute inflicted { text }
type = attribute type { text }
category = attribute category { text }
inflictor = attribute inflictor { text }